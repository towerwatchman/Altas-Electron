{
  "name": "atlas-electron",
  "version": "1.0.0",
  "description": "Atlas: Open-source game and visual novel manager",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:css && electron-builder --win",
    "dev": "npm run build:css && electron . --dev",
    "build:css": "postcss src/assets/css/tailwind.css -o src/assets/css/tailwind.output.css",
    "rebuild": "electron-rebuild --version=38.0.0"
  },
  "build": {
    "appId": "com.towerwatchman.atlas",
    "win": {
      "target": [
        "exe"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@babel/standalone": "^7.25.6",
    "@npmcli/fs": "^3.1.0",
    "adm-zip": "^0.5.10",
    "axios": "^1.7.2",
    "electron-updater": "^6.6.2",
    "lru-cache": "^10.0.0",
    "node-7z": "^0.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.0.0",
    "sqlite3": "^5.0.2",
    "swiper": "^10.3.1",
    "unrar": "^0.2.0"
  },
  "devDependencies": {
    "electron-rebuild": "^3.2.9",
    "autoprefixer": "^10.4.21",
    "debug": "^4.3.4",
    "electron": "^38.0.0",
    "electron-builder": "^19.24.4",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.4.3"
  }
}
